<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/txtPhone_itemAccount"
            android:text="0986843243"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtTen_itemAccount"
            android:text="Ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtPhanquyen_itemAccount"
            android:text="Cap bac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                android:shadowColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:cornerRadius="4dp"
                android:id="@+id/btnPhanquyen_itemAccount"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:text="Phân quyền"
                app:fButtonColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <info.hoang8f.widget.FButton
                android:shadowColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:cornerRadius="4dp"
                android:id="@+id/btnDelete_itemAccount"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:text="Xoá"
                app:fButtonColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>