<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:weightSum="5"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtId_orderStatus"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="#11111"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtStatus_orderStatus"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Dang xu ly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtPhone_orderStatus"
                android:text="0986843243"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtName_orderStatus"
                android:text="Tong Minh Nhut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAddress_orderStatus"
                android:text="643 Ta Quang Buu, P4, Quan 8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                android:shadowColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:cornerRadius="4dp"
                android:id="@+id/btnUpdate_itemOrderStatus"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:text="Cập nhật"
                app:fButtonColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                android:shadowColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:cornerRadius="4dp"
                android:id="@+id/btnDirection_itemOrderStatus"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:text="Chỉ đường"
                app:fButtonColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                android:shadowColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:cornerRadius="4dp"
                android:id="@+id/btnDelete_itemOrderStatus"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:text="Xoá"
                app:fButtonColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>