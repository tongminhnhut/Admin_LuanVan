<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:textColorHint="@color/colorPrimary"
                        android:paddingLeft="10dp"
                        android:id="@+id/edtName_dialogAddDH"
                        android:hint="Ten dong ho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@color/colorPrimary"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/colorPrimary"
                        app:met_singleLineEllipsis="true"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:inputType="number"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtPrice_dialogAddDH"
                            android:hint="Giá"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtBrand_dialogAddDH"
                            android:hint="Thương hiệu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtXuatxu_dialogAddDH"
                            android:hint="Xuất xứ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtMay_dialogAddDH"
                            android:hint="Nhãn hiệu máy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtSize_dialogAddDH"
                            android:hint="Kích thước mặt kính"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtBaoHanh_dialogAddDH"
                            android:hint="Bảo hành"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_weight="1"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtDaydeo_dialogAddDH"
                            android:hint="Dây đeo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:textColorHint="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:id="@+id/edtDiscount_dialogAddDH"
                            android:hint="Giảm giá"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="@color/colorPrimary"
                            app:met_singleLineEllipsis="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <info.hoang8f.widget.FButton
                            android:textColor="@android:color/white"
                            android:layout_weight="1"
                            app:cornerRadius="4dp"
                            android:id="@+id/btnSlect_dialogAddDH"
                            app:shadowEnabled="true"
                            android:layout_margin="4dp"
                            app:shadowHeight="5dp"
                            android:text="Select"
                            app:fButtonColor="@color/colorPrimary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <info.hoang8f.widget.FButton
                            android:textColor="@android:color/white"
                            android:layout_weight="1"
                            app:cornerRadius="4dp"
                            android:id="@+id/btnUpload_dialogAddDH"
                            app:shadowEnabled="true"
                            android:layout_margin="4dp"
                            app:shadowHeight="5dp"
                            android:text="Upload"
                            app:fButtonColor="@color/colorPrimaryDark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>



</RelativeLayout>