<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_OrderDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgDetail_itemOrderDetail"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtName_itemOrderDetail"
                android:text="Product Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtSoluong_itemOrderDetail"
                android:text="So luong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtPrice_itemOrderDetail"
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtDiscount_itemOrderDetail"
                android:text="Discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>